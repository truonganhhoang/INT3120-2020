<!-- Head -->
<%  title ="List traffic sign category" %>
<% page2="Traffic Sign Categories" %>
<% page3="List" %>
<% link2="#" %>

<!-- Page content -->

<!-- Page content -->
<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Traffic signs</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first text-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Content</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                          
                            <% result.forEach(function(id) { %>
                                <tr>
                                    <td><%= id.tfsc_id %></td>
                                    <td>  <%= id.tfsc_name %></td>
                                    <td>  <%= id.tfsc_content %></td>
                                    <td>  <a href="<%= id.tfsc_image %>">Click</a></td>
                          
                                    <td> <a  href="/admin/trafficsignCategories/delete/<%= id.tfsc_id %>"><i class="icon-trash"></i> </a>
                                        <a href="/admin/trafficsignCategories/change/<%= id.tfsc_id %>"><i class="icon-pencil"></i></a></td>
                                </tr>
                              
                             <% }); %>
                    
                        </tbody>
                     
                    </table>
                </div>
             
                    <div class="form-group row text-right">
                        <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                            <a type="submit" class="btn btn-space btn-primary text-white" href="/admin/trafficsignCategories/json">Json</a>
                        </div>
                    </div>
              
            </div>
            
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>
