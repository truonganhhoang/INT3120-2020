<!-- Head -->
<%  title ="List question" %>
<% page2="Questions" %>
<% page3="List" %>
<% link2="#" %>

<!-- Page content -->
<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Questions</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first text-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Category_ID</th>
                               <th>Title</th>
                               <th>Answer1</th>
                               <th>Answer2</th>
                               <th>Answer3</th>
                               <th>Answer4</th>
                               <th>Correct</th>
                               <th>Suggest</th>
                               <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                          
                            <% result.forEach(function(id) { %>
                                <tr>
                                    <td><%= id.Q_id %></td>
                                    <td>  <%= id.Q_name %></td>
                                    <td>  <%= id.Q_category_id %></td>
                                    <td>  <%= id.Q_title %></td>
                                    <td>  <%= id.Q_1 %></td>
                                    <td>  <%= id.Q_2 %></td>
                                    <td>  <%= id.Q_3 %></td>
                                    <td>  <%= id.Q_4 %></td>
                                    <td>  <%= id.Q_check %></td>
                                    <td>  <%= id.Q_suggest %></td>
                                    
                                    <td> <a  href="/admin/questions/delete/<%= id.Q_id %>"><i class="icon-trash"></i> </a>
                                    <a href="/admin/questions/change/<%= id.Q_category_id %>/<%= id.Q_id %>"><i class="icon-pencil"></i></a></td>
                                </tr>
                              
                             <% }); %>
                    
                        </tbody>
                     
                    </table>
                </div>
             
        
              
            </div>
            
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>
