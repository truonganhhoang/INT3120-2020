<!-- Head -->
<%  title ="List question category" %>
<% page2="Question Categories" %>
<% page3="List" %>
<% link2="#" %>

<!-- Page content -->

<!-- Page content -->
<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Question Categories</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first text-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Content</th>
                                <th>Button</th>
                              
                                <th>Color</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                          
                            <% result.forEach(function(id) { %>
                                <tr>
                                    <td><%= id.QC_id %></td>
                                    <td>  <%= id.QC_name %></td>
                                    <td>  <%= id.QC_content %></td>
                                    <td>  <%= id.QC_button %></td>
                                    <td>  <%= id.QC_color %></td>
                                    <td> <a  href="/admin/QuestionCategories/delete/<%= id.QC_id %>"><i class="icon-trash"></i> </a>
                                        <a href="/admin/QuestionCategories/change/<%= id.QC_id %>"><i class="icon-pencil"></i></a></td>
                                </tr>
                              
                             <% }); %>
                    
                        </tbody>
                     
                    </table>
                </div>
             
                    <div class="form-group row text-right">
                        <div class="col col-sm-10 col-lg-9 offset-sm-1 offset-lg-0">
                            <a type="submit" class="btn btn-space btn-primary text-white" href="/admin/QuestionCategories/json">Json</a>
                        </div>
                    </div>
              
            </div>
            
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>
